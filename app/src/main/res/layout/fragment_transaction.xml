<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_trans"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TransactionFragment">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5sdp">


        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_21sdp"
            android:padding="@dimen/_1sdp"
            android:text="FEB 2025"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_93sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/forward_arrow" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:src="@drawable/bookmark" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:src="@drawable/search" />

            <ImageView
                android:id="@+id/filter"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_9sdp"
                android:src="@drawable/filter" />


        </LinearLayout>


    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/trans_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:layout_below="@id/saperater" />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/linear_daily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daily_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:text="Daily"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <View
                android:id="@+id/indicator_daily"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/blue"
                android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_calender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calender_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:text="Calender"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View

                android:id="@+id/indicator_calender"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/blue"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_monthly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monthly_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:text="Monthly"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View

                android:id="@+id/indicator_monthly"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/blue"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:text="Total"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View

                android:id="@+id/indicator_total"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/blue"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_note"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/note_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:text="Note"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View

                android:id="@+id/indicator_note"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/blue"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_dailybelow"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@id/linear"

        android:background="@color/stroke" />


    <LinearLayout
        android:id="@+id/todoLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Income"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.00"
                android:textColor="#4D5BD3"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/_5sdp"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Expenses"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/orange"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/_5sdp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


    </LinearLayout>


    <View
        android:id="@+id/saperater"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@id/todoLL"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/stroke" />




    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/_43sdp"
        android:layout_height="@dimen/_43sdp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/add" />


</RelativeLayout>
