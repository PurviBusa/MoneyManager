<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.IntroFragment">


    <ImageView
        android:id="@+id/imgChatImage_3"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:padding="35dp"
        android:src="@drawable/third_intro" />

    <TextView
        android:id="@+id/headrTxt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text= "Grow Your Wealth"
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subTxt_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Learn &amp; invest weekly to maximize your income."
        android:textColor="@color/gray"
        android:textSize="23dp" />




</LinearLayout>
