<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/black"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Amount"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />


        <ImageView
            android:id="@+id/img_currency"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_45sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/currency" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/close" />

    </RelativeLayout>



    <GridLayout

        android:id="@+id/gride_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout"
        android:layout_centerHorizontal="true"
        android:columnCount="4"
        android:visibility="gone"
        android:rowCount="4">


        <TextView
            android:id="@+id/txt_1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="3"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_backSpace"
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_rowWeight="1"
            android:padding="@dimen/_15sdp"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:src="@drawable/backarrow_keyboard"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_4"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="4"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_5"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_6"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="6"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_minus"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="âˆ’"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_7"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="7"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_8"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="8"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_9"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="9"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_calculator"
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_rowWeight="1"
            android:padding="@dimen/_13sdp"
            android:layout_columnWeight="1"
            android:src="@drawable/calculator_design"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:backgroundTint="#F0ECEC"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_0"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_dot"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:gravity="center"
            android:text="."
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_done"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:background="@drawable/button_dig"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </GridLayout>



    <LinearLayout
        android:id="@+id/category_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@id/relative_layout">

        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


   </LinearLayout>


</LinearLayout>