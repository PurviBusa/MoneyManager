<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.IntroFragment">


    <ImageView
        android:id="@+id/imgChatImage_2"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:padding="35dp"
        android:src="@drawable/second_intro" />

    <TextView
        android:id="@+id/headrTxt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Track &amp; Save"
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subTxt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Monitor your earning &amp; set savings goals."
        android:textColor="@color/gray"
        android:textSize="23dp" />

</LinearLayout>


