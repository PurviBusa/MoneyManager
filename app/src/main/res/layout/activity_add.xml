<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".activities.AddActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/fl_keyboard_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/addRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">


                <ImageView
                    android:id="@+id/img_backarrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:minHeight="@dimen/_40sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/backarrow" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_43sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:padding="@dimen/_1sdp"
                    android:text="Income"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <ImageView

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_28sdp"
                    android:minHeight="@dimen/_40sdp"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/bookmark2" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llDoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addRelative"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/income_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/incomebutton"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_6sdp"
                    android:text="Income"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/expense_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/total_expence"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_6sdp"
                    android:text="Expense"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/total_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/total_expence"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_6sdp"
                    android:text="Transfer"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinerLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llDoll"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Date"
                    android:textColor="#8A8383"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:text="24/06/2025 (Tue)" />

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="4.24 pm" />


                <LinearLayout
                    android:id="@+id/lllTodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="end"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/img_repeat"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:src="@drawable/repeat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="end"
                        android:text="Rep/Inst."
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>


            </LinearLayout>


            <View
                android:id="@+id/date_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/LinerLL"
                android:layout_marginStart="@dimen/_67sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/linerRR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_view"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Amount"
                    android:textColor="#8A8383"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:backgroundTint="@color/gray"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />


            </LinearLayout>

            <View
                android:id="@+id/amount_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/linerRR"
                android:layout_marginStart="@dimen/_67sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/linerPP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount_view"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Category"
                    android:textColor="#8A8383"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/income_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />
            </LinearLayout>

            <View
                android:id="@+id/category_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/linerPP"
                android:layout_marginStart="@dimen/_67sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/linerBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_view"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Account"
                    android:textColor="#8A8383"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/income_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />
            </LinearLayout>

            <View
                android:id="@+id/account_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/linerBB"
                android:layout_marginStart="@dimen/_67sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#FBF3F3" />

            <LinearLayout
                android:id="@+id/linerZZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_view"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Note"
                    android:textColor="#8A8383"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/income_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:padding="11dp" />


            </LinearLayout>

            <View
                android:id="@+id/note_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/linerZZ"
                android:layout_marginStart="@dimen/_67sdp"
                android:background="@color/lightGray" />


            <View
                android:id="@+id/viewLL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/note_view"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/linearTT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewLL"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_12sdp"
                    android:background="#1FC7BFBF"
                    android:inputType="textMultiLine"
                    android:padding="1dp" />

            </LinearLayout>

            <View
                android:id="@+id/viewFF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/linearTT"
                android:background="@color/lightGray" />

            <RelativeLayout
                android:id="@+id/relativePP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewFF"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@android:color/transparent"
                    android:hint="Discription"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="38dp"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/camra" />


            </RelativeLayout>

            <View
                android:id="@+id/viewBB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/relativePP"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/tv_liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:weightSum="2"
                android:layout_below="@id/viewBB">

                <TextView
                    android:id="@+id/save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.40"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/savebutton"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/continu"
                    android:gravity="center"
                    android:text="Continue"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_10sdp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_keyboard_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.example.moneymanager.Class.CustomKeyboard
            android:id="@+id/custom_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/category_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/dialog_category_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/dialog_accounts_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>