<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.AddActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/addRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">


                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:minHeight="@dimen/_40sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/backarrow" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:padding="@dimen/_1sdp"
                    android:text="Income"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <ImageView

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_28sdp"
                    android:minHeight="@dimen/_40sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/bookmark2" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llDoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addRelative"
                android:layout_centerInParent="true"
                android:gravity="center">


                <TextView

                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/incomebutton"
                    android:gravity="center"
                    android:text="Income"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="visible" />

                <TextView

                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/incomebutton"
                    android:backgroundTint="#E7DFDF"
                    android:gravity="center"
                    android:text="Expense"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="visible" />

                <TextView

                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/incomebutton"
                    android:backgroundTint="#E7DFDF"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_15sdp"
                    android:visibility="visible" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llDoll">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/repeat" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lllTodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llDoll"
                android:layout_marginTop="@dimen/_23sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Date"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:text="24/06/2025 (Tue)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:text="4.24 pm" />


            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/txtView"
                android:layout_marginStart="@dimen/_61sdp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/txtView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:layout_below="@id/lllTodo"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lllTodo"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_7sdp"
                android:text="Rep/Inst." />

            <LinearLayout
                android:id="@+id/linearAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Amount"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/gray"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />


            </LinearLayout>


            <View
                android:id="@+id/viewAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/linearAmount"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linearCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearAmount"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Category"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />


            </LinearLayout>

            <View
                android:id="@+id/viewCatogary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/linearCategory"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linearAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@id/viewCatogary"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Account"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/txtAcnt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />


            </LinearLayout>

            <View
                android:id="@+id/viewAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/linearAccount"
                android:layout_marginStart="@dimen/_60sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linearNote"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_below="@id/viewAccount"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Note"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/txtNote"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:backgroundTint="@color/gray"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearNote"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />


            </LinearLayout>

            <View
                android:id="@+id/viewLL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/linearLL"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linearTT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewLL"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_12sdp"
                    android:background="#1FC7BFBF"
                    android:inputType="textMultiLine"
                    android:padding="1dp" />

            </LinearLayout>

            <View
                android:id="@+id/viewFF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/linearTT"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/relativePP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Description"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_28sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/camra" />


            </RelativeLayout>

            <View
                android:id="@+id/viewBB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/relativePP"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_68sdp"
                android:layout_below="@id/viewBB">

                <TextView
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@drawable/savebutton"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_23sdp" />

                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@drawable/continu"
                    android:gravity="center"
                    android:text="Continue"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_20sdp" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>